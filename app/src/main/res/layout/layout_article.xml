<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6">

    <LinearLayout
        android:id="@+id/article_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/text_article_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="October 15,2014"
            android:textColor="#7A7B7D" />

        <include layout="@layout/divider_gray_line" />

        <TextView
            android:id="@+id/text_article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:paddingTop="3dp"
            android:text="那年夏天"
            android:textColor="#7A7B7D"
            android:textSize="19sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_article_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:text="夏知花落"
            android:textColor="#C2C3C5"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_article_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="5dp"
            android:lineSpacingMultiplier="1.2"
            android:text="        在那里，平铺一湾湛蓝，挂苏月，引曲水，看日出日落，云卷西月。"
            android:textColor="#525355"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/text_article_editor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="（责任编辑：夏知花落）"
            android:textColor="#525355"
            android:textSize="15sp" />

        <com.uphie.one.widgets.LikeView
            android:id="@+id/liv_article"
            style="@style/LikeViewStyle" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="#C6C7C9" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_article_author_addition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="夏知花落"
                android:textColor="#525355"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/text_article_author_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#C3C4C6"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_article_author_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:lineSpacingExtra="5dp"
            android:lineSpacingMultiplier="1.2"
            android:text="夏知花落,学生。"
            android:textColor="#525355"
            android:textSize="15sp" />
    </LinearLayout>
</ScrollView>


