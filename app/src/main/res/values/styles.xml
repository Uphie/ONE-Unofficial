<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TabStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/tab</item>
        <item name="android:paddingTop">15dp</item>
        <item name="studio.uphie.one:checkedTextColor">@color/tab_text_checked</item>
        <item name="studio.uphie.one:uncheckedTextColor">@color/tab_text_unchecked</item>
    </style>

    <style name="LikeViewStyle">
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textColor">#8B8B8B</item>
    </style>

    <style name="ParagraphStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#525355</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="ItemStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableRight">@drawable/ic_to</item>
        <item name="android:background">@drawable/bg_bottom_line_gray_slim</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ShareItemStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
    
    <style name="FadeStyle">
        <item name="android:windowEnterAnimation">@anim/anim_fade_in</item>
        <item name="android:windowExitAnimation">@anim/anim_fade_out</item>
    </style>
</resources>
